doctype 5
html
  head
    title Poll Index
    link(href="/public/css/main.css" rel="stylesheet" type="text/css")
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")      
  body
    .main.container
      .row
        .col-md-6.col-md-offset-3
          h1.display-4.m-b-2 New Poll
          - name = Object.keys(poll)[0]
          - option_1 = Object.keys(poll[name])[0]
          - option_2 = Object.keys(poll[name])[1]
          form(action="/api/:user_id/polls/new" method="post")
            div.form-group
              label(for="poll_name") New Poll
              input#poll_name.form-control(type="text" name="poll_name" value=name)
            div.form-group
              label(for="option_1") Option 1
              input#option_1.form-control(type="text" name="option_1" value=option_1)
            div.form-group
              label(for="option_2") Option 2
              input#option_2.form-control(type="text" name="option_2" value=option_2)
            button.btn.btn-primary(type="submit") Create Poll
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js", integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa", crossorigin="anonymous")